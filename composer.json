{
    "name": "moreshco/pushe-laravel",
    "description": "A laravel package for communications with pushe",
    "keywords": [
        "moreshco",
        "pushe-laravel"
    ],
    "homepage": "https://github.com/moreshco/pushe-laravel",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Seyed Ali Ahmadnejad",
            "email": "ali@moreshco.ir",
            "role": "Developer"
        },
        {
            "name": "Amir Hojati",
            "email": "amir@moreshco.ir",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Moreshco\\PusheLaravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Moreshco\\PusheLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Moreshco\\PusheLaravel\\PusheLaravelServiceProvider"
            ],
            "aliases": {
                "PusheLaravel": "Moreshco\\PusheLaravel\\PusheLaravelFacade"
            }
        }
    }
}
